<!--components/learn.wxml-->
<view class="container2">
  <view class="list-body">
      <view class="flex-wrp" style="flex-direction:row;">
      <view style="margin-top:0rpx">
      <text>请选择正确选项</text>
      </view>
      <view style="margin-top:40rpx">
      <image style="width: 600rpx; height: 400rpx; background-color: #eeeeee;margin-left:25rpx" mode="scaleToFill" src="{{wordToFinish[index].word.imgUrl}}"></image>
     </view>

      <view class="info" >
          <view class="item">
              <van-button round custom-class="{{button1}}" color="{{color1}}" data-button="button1" catchtap="answer" data-id="{{wordToFinish[index].word.id}}" data-answer="{{answer1}}" type="info" style="width:90%;margin-top:50rpx" block>{{answer1}}</van-button>
          </view>
        <view class="item">
              <van-button round custom-class="{{button2}}" color="{{color2}}" data-button="button2" catchtap="answer" data-id="{{wordToFinish[index].word.id}}" data-answer="{{answer2}}" type="info" style="width:90%;margin-top:50rpx"  block>{{answer2}}</van-button>
          </view>
        <view class="item">
              <van-button round custom-class="{{button3}}" color="{{color3}}" data-button="button3" catchtap="answer"  data-id="{{wordToFinish[index].word.id}}" data-answer="{{answer3}}" type="info" style="width:90%;margin-top:50rpx" block>{{answer3}}</van-button>
          </view>
        <view class="item" >
              <van-button round custom-class="{{button4}}" color="{{color4}}" data-button="button4" catchtap="answer" data-id="{{wordToFinish[index].word.id}}" data-answer="{{answer4}}" type="info" style="width:90%;margin-top:50rpx"  block>{{answer4}}</van-button>
          </view>
      </view>
      </view>
  </view>
</view>