<swiper indicator-dots="{{indicatorDots}}" autoplay="{{autoplay}}" interval="{{interval}}" duration="{{duration}}">
<block wx:for="{{imgUrls}}" wx:key="unique">
    <swiper-item>
        <image src="{{item}}" class="slide-imge" style="width: 100%;height:100%:" mode="scaleToFill"></image>
    </swiper-item>
</block>
</swiper>


<scroll-view class="content-play2" scroll-y>
<view class="content-info-portal">
    <view >
        <image src="../../images/handMusic.svg" style="width:150rpx;height:150rpx"></image>
        <text style="font-size:27rpx;color:#666;font-family: MicroSoft Yahei;">手语歌</text>
    </view>
    <view >
        <image src="../../images/protectEar.png" style="width:150rpx;height:150rpx"></image>
        <text style="font-size:27rpx;color:#666;font-family: MicroSoft Yahei;">护耳纯音</text>
    </view>
    <view>
        <image src="../../images/likemusic.png" style="width:150rpx;height:150rpx"></image>
        <text style="font-size:27rpx;color:#666;font-family: MicroSoft Yahei;">我的收藏</text>
    </view>
</view>
<view class="content-info-portal" wx:for="{{songlist}}">
    <view wx:for="{{item}}">
        <image src="{{item.imgUrl}}" style="width:150rpx;height:150rpx" catchtap="songs" data-item="{{item}}"></image>
        <text style="font-size:27rpx;color:#666;font-family: MicroSoft Yahei;">{{item.title}}</text>
    </view>
</view>
<view style="background-color:#ffffff;display: flex;margin-bottom:100rpx"></view>
</scroll-view>