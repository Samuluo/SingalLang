<!--pages/test/test.wxml-->
<view class="container2">
  <view class="list-body">
      <view class="flex-wrp" style="flex-direction:row;">
      <view wx:for="{{dictionary}}">
          <view class="item"><van-card
          thumb="{{item.picture}}"
          >
          <view slot="title" style="margin-top:10rpx;margin-left:10rpx">
          <text class="title">{{item.name}}</text>
          <text wx:if="{{item.condition==1}}" class="title" style="float:right;color:green;font-size:22rpx">正在学习</text>
          <van-icon wx:if="{{item.condition==2}}" name="delete"  style="float:right;margin-left:2rpx" />
          <text wx:if="{{item.condition==2}}" class="title" style="float:right;font-size:22rpx">删除</text>
          </view>
          <view slot="desc" style="margin-top:20rpx;margin-left:5rpx">
          <text class="desc" >每日30词，剩余20天</text>
          <van-progress percentage="50" stroke-width="1" color="#49CB55"/>
          </view>
          <view slot="bottom" style="margin-left:5rpx">
           <text class="bottom-desc"  style="margin-top:15rpx;float:left">已学单词</text>
           <text class="bottom-desc"  style="margin-top:15rpx;float:right">2500</text>
           <text class="bottom-desc"  style="margin-top:15rpx;float:right">/</text>
           <text class="bottom-desc"  style="margin-top:15rpx;float:right">1300</text>
          </view>
          </van-card>
          </view>
      </view>
      </view>
  </view>
  
  <van-button round type="info" style="width:90%;margin-top:50rpx" color="#9EDDB2" block>添加计划</van-button>
</view>