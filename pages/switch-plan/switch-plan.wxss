/* pages/test/test.wxss */

.container2{
  min-height: 100vh;
  background-color: #f7f6f6;
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
}
.item{
  margin-top: 40rpx;
  border-color: #83c6c2;
  border-style: solid;
  border-width: 5rpx;
  border-radius: 10rpx;
  margin-bottom: 60rpx;
}
.list-body{
  margin-top: 10rpx;
  height: 100%;
  width: 90%;
}
.title{
  font-weight: bold;
  font-size: 30rpx;
}
.desc{
  font-weight: normal;
  font-size: 25rpx;
  display: flex;
  margin-bottom: 20rpx;
  flex-direction: column; /**子元素上下排列*/
}
.bottom-desc{
  font-weight: lighter;
  font-size: 25rpx;
}