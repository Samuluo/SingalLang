/* pages/talk/talk.wxss */

.button-layer{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 15rpx;
  height: 20%;
  width: 100%;
  background: #f0f0f0;
}
.showme-layer{
  height: 100%;
  position: relative;
  width: 90%;
  margin-left: 5%;
  background: #ffffff;
  border: 1rpx solid #83c6c2;
  border-radius: 40rpx 40rpx 40rpx 40rpx;
}
.showme-layer2{
  height: 30%;
  position: relative;
  width: 90%;
  margin-left: 5%;
  background: #ffffff;
}
.showme-layer2 .layer2-top {
  background-color: #83c6c2;
  height: 20%;
  color:#f3f3f3;
  border-radius: 20rpx 20rpx 0rpx 0rpx;
}
.showme-layer2 .layer2-content {
  background-color: #095751;
  color:#5e5a5a;
  border-radius: 0rpx 0rpx 20rpx 20rpx;
  font-size: 40rpx;
  height: 100rpx;
}
.content-box-showme{
  height: 100%;
  line-height: 5.5;
  padding: 20rpx 20rpx 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
}
.content-box-showyou{
  height: 100%;
  line-height: 1.5;
  padding: 20rpx 20rpx 0 30rpx;
  box-sizing: border-box;
  border-bottom: 1px solid #e5e5e5;
  transform: scaleY(-1);
}
.showyou-layer{
  height: 35%;
  width: 100%;
  background: #ffffff;
  transform: scaleX(-1);
}
.input-layer{
  height: 5%;
  width: 100%;
  position: fixed;
  bottom: 0;
  background: #ffffff;
}

.speak-button{
  height: 220rpx;
  width: 220rpx;
  margin-bottom: 20rpx;
}
.speak-button:active{
    opacity: .7;
}
.tips{
  position: absolute;
  width: 400rpx;
  height: 200rpx;
  left: 175rpx;
  top: 320rpx;
}
.input-panel {
    height: 100%;
    padding: 0 15rpx 0 15rpx;
    background: #f0f0f0;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
.send-input {
    font-size: 38rpx;
    flex: 1;
    height: 95rpx;
    background: #fff;
    border:#ddd 1rpx solid;
    border-radius: 10rpx;
    box-sizing: border-box;
    padding: 0 10rpx;
}
.send-btn {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 120rpx;
    height: 80rpx;
    line-height: 75rpx;
    background-color: #474646;
    font-size: 32rpx;
    color:#fff;
    border-radius: 10rpx;
    margin-left: 15rpx;
}
.send-btn:active{
    opacity: .7;
}
.icon{
  height: 40rpx;
  width: 40rpx;
}

.toast{
  background: rgba(0,0,0, 0.7);
  color: #fff;
  display: flex;
  align-items: center;
  height: 130rpx;
  width: 300rpx;
  padding: 20rpx;
  border-radius: 20rpx;
  position: fixed;
  top: 340rpx;
  left: 225rpx;
}
.toast text{
  font-size: 36rpx;
}
.waiting-icon{
  position: relative;
  left: 10rpx;
  bottom: 15rpx;
}
.microphone{
  height: 80rpx;
  width: 80rpx;
}
.warning{
  height: 80rpx;
  width: 80rpx;
  margin-left: 20rpx;
}
.warning-text{
  margin-left: 20rpx;
}

.footer{
	width: 84%;
  height: 25px;
	border: 1px solid #83c6c2;
  border-top-left-radius: 10px; 
  border-top-right-radius: 10px;
}
.sdf{
  width: auto;
  padding-left: 20rpx;
  padding-right: 20rpx;
  display: inline-block;
	text-align: center;
  height: 20px;
  z-index: 1;
	line-height: 20px;
  font-size: 14px;
  background-color: #095751;
	border-bottom-left-radius: 10rpx; 
  border-bottom-right-radius: 10rpx; 	
  color:#ffffff;
  font-weight: bold;
}
.sdf:first-child{
  border-left: 1;
  border-top-left-radius: 20rpx; 
}
.sdf:last-child{
  border-right: 1;
  border-top-right-radius: 20rpx; 
}
.footer .btn-block{
	border-radius:2;
}
.footer .btn-block:after{
	border: 0;
}
.scroll-view{
  white-space: nowrap;
}
.scroll-item{
  display: inline-block;
}
.tcp{
  z-index: 5;
  margin-left: 10%;
  position:fixed;
  display: inline-block;
  bottom: 290rpx;
  text-align:center;
  writing-mode: vertical-lr;
  border: 2rpx solid pink;
  color: white;
  background: pink;
  width: 70rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  line-height:70rpx;
}