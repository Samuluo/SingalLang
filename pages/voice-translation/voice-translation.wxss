.button-layer{
  display: flex;
  justify-content: center;
  align-items: center;
  padding-top: 5rpx;
  padding-bottom: 7rpx;
  height: 80%;
  width: 100%;

}
.showme-layer{
  height: 100%;
  position: relative;
  width: 90%;
  margin-left: 5%;
  background: #ffffff;
  border: 0rpx solid #83c6c2;
  border-radius: 40rpx 40rpx 40rpx 40rpx;
  box-shadow:1rpx 1rpx 10rpx 10rpx #c2f0f0
}
.showme-layer2{
  height: 30%;
  position: relative;
  width: 90%;
  box-shadow:1rpx 1rpx 10rpx 10rpx #c2f0f0;
  margin-left: 5%;
  border-radius: 20rpx 20rpx 20rpx 20rpx;
  background: #f0f0f0;
}
.showme-layer2 .layer2-top {
  background-image: linear-gradient(to right,  #83c6c2 ,#d6fcfc);
