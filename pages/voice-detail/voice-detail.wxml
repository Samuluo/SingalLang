<!--pages/voice-detail/voice-detail.wxml-->
<navigation-bar default-data="{{defaultData}}"></navigation-bar>
<scroll-view class="scroll-view" scroll-y>
  <view wx:for="{{array}}" >
  <view>
    {{sentence[item]}}
    </view>
  <view  class="borderx">
    <view wx:for="{{sentencedetail[item]}}">
    <van-swipe-cell style="height: {{screenheight}};"
      id="swipe-cell"
      right-width="{{ 120 }}"
    >
      <van-cell-group>
        <van-cell title="{{item.content}}" />
      </van-cell-group>
      <view slot="right" class="right">
            <view class="item" bindtap="onEdit" data-item="{{item}}" >修改</view>
            <view class="item" bindtap="onDelete" data-item="{{item}}">删除</view>
        </view>
    </van-swipe-cell>
  </view>
  <view style="height: 10%rpx;padding: 10rpx;text-align: center;display: flex;align-items: center;justify-content: center;" bindtap="onAdd" data-item="{{sentence[item]}}">增加一条</view>
  </view>
</view>
</scroll-view>
<!-- 弹框 -->
<van-dialog
  use-slot
  title="确定删除?"
  show="{{ show }}"
  show-cancel-button
  bind:close="onClose"
  bind:confirm="delete"
>
</van-dialog>
<van-dialog
  use-slot
  title="修改界面"
  show="{{ show2 }}"
  show-cancel-button
  bind:close="onClose"
  bind:confirm="edit"
>
<van-field
          value="{{content}}"
          type="textarea"
          placeholder="请输入内容"
          autosize
          border="{{ false }}"
          bind:change="onChange"
        />
</van-dialog>
<van-dialog
  use-slot
  title="增加界面"
  show="{{ show3 }}"
  show-cancel-button
  bind:close="onClose"
  bind:confirm="add"
>
<van-field
          value="{{content2}}"
          type="textarea"
          placeholder="请输入内容"
          autosize
          border="{{ false }}"
          bind:change="onChange2"
        />
</van-dialog>
