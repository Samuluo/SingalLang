page{
  background-color: #f7f6f6;
}
.container2{

  background-color: #f7f6f6;
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.item{
  background-color: #ffffff;
  margin-top: 50rpx;
  border-color: #83c6c2;
  border-style: solid;
  border-width: 2rpx;
  border-radius: 20rpx;
}
.card{
  border-radius: 20rpx;
  border-color: #83c6c2;
}
.title{
  font-weight: bold;
  font-size: 30rpx;
}
.desc{
  font-weight: normal;
  font-size: 25rpx;
  display: flex;
  margin-bottom: 20rpx;
  flex-direction: column; /**子元素上下排列*/
}
.bottom-desc{
  font-weight: normal;
  font-size: 25rpx;
}
.newimage{
  height: 200rpx;
}
.news-focus swiper-item image{
  width: 100%;
}
.news-list{
  display: flex;
  flex-direction: column;
}
.news-list view{
  margin-top:100rpx;
}
.news-list text{
  box-sizing: border-box;
  padding: 0 20rpx;
  text-indent: 2;
}
.news-list image{
  width: 100%;
}

.post-container {
  display: flex;
  flex-direction: column;
  width: 90%;
  margin-top: 20rpx;
  margin-bottom: 40rpx;
  background-color: #fff;
  border-bottom: 2rpx solid #83c6c2;
  border-top: 2rpx solid #83c6c2;
  border-left: 2rpx solid #83c6c2;
  border-right: 2rpx solid #83c6c2;
  border-radius: 20rpx;
  padding-bottom: 10rpx;
}

.post-auther-date {
  /* 上、右、下、左 */
  margin: 10rpx 0 20rpx 10rpx;
}

.post-auther {
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}

.post-date {
  margin-left: 20rpx;
  vertical-align: middle;
  margin-bottom: 5rpx;
  font-size: 26rpx;
}

.post-title {
  font-size: 34rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 10rpx;
  margin-left: 30rpx;
}

.post-image{

  width: 60%;
  height: 300rpx;

  margin: 0 auto;
  display: block;    
}

.post-content{
  color: #666;
  font-size: 28rpx;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  letter-spacing: 2rpx;
  line-height: 40rpx;
}

.post-like{
  font-size: 13px;
  flex-direction: row;
  line-height: 16px;
  margin-left: 10px;
}

.post-like-image{
  height: 16px;
  width: 16px;
  margin-right: 8px;
  vertical-align: middle;
}

.post-like-font{
    vertical-align: middle;
      margin-right: 20px;
}
