  height: 700rpx;
  margin-bottom: 22rpx;
  width:100%;  
  margin-top:200rpx
}
.tool_bar {
  justify-content: space-between;
  padding: 0 12rpx;
  margin-bottom: 30rpx;
  font-size: 28rpx;
}
 
.tool_bar .icon {
  width: 40rpx;
  height: 40rpx;
  padding-right: 8rpx;
  vertical-align: bottom;
}
.set_bar { padding: 30rpx 0rpx 0rpx 30rpx; 
  background:linear-gradient(to right,  #8eccc8 ,#e6eeee);
  border-radius: 10rpx;
  width: 95%;
  box-shadow: 5px 5px 5px #cdcfcf;
  letter-spacing: 10rpx;
}
.set_bar .title {
  letter-spacing: 10rpx;
  padding-right: 10rpx;
  font-weight: bold;
  color:#ffffff;

}
.set_bar .right_demo { align-items: center; }
.color_bar .right_demo {
  justify-content: space-between;
  flex: 1;
}
.linewidth_bar .linewidth_demo {
  border: 5rpx solid transparent;
  margin: 0 22rpx;
}
.linewidth_bar .linewidth_demo.active { border-color: #fff;box-shadow: 0rpx 0rpx 10rpx orange }
