.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  height: 100vh;
  padding: 0;
  box-sizing: border-box;
} 
 
 
.container > .header {
  justify-content: space-between;
  padding-top: 40rpx;
  padding-bottom: 32rpx;
  font-size: 30rpx;
}
 
.container > .header .left {
  align-items: center;
  color: #e22;
}
 
.container .left .icon {
  width: 44rpx;
  height: 44rpx;
}
 
.container > .header .right {
  align-items: center;
  color: #333;
}
 
.container .right .icon {
  width: 40rpx;
  height: 40rpx;
  padding-left: 18rpx;
}
 
.mycanvas {
  width: 720rpx;
  height: 650rpx;
  margin-bottom: 22rpx;
  background: #fff;
  box-shadow: 0 0 10rpx #ccc;
}
