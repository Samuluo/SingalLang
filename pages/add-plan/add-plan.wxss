/* pages/add-plan/add-plan.wxss */

.container2{
  min-height: 100vh;
  background-color: #f7f6f6;
  padding: 20rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.item{
  height:200rpx;
  border-color: #46CA53;
  border-style: solid;
  border-width: 2rpx 4rpx 10rpx 4rpx;
}
.item2{
  height:80rpx;
  background-color: #ffffff;
  border-color: #46CA53;
  border-style: solid;
  border-width: 2rpx 4rpx 2rpx 4rpx;
  display: flex; /*设置显示样式**/
  align-items: center; /**子view垂直居中*/
}
.list-body{
  margin-top: 10rpx;
  height: 100%;
  width: 90%;
}
.content{
  margin-left: 10rpx;
  font-size: 27rpx;
  font-weight: lighter;
  display: flex;
  flex-direction: column; /**子元素上下排列*/
}
.title{
  font-weight: bold;
  font-size: 30rpx;
}
.desc{
  font-weight: lighter;
  font-size: 25rpx;
}
/* pages/adjustPlan/adjustPlan.wxss */
