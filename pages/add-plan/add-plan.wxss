  width:30%;
  height: 300rpx;
}
.cidianname {
  left: 108px;
  top: 96px;
  width: 156px;
  height: 26px;
  color: #101010 100%;
  font-size: 18px;
  text-align: left;
  font-family: PingFangSC-regular;
}
/*横向布局  */
.layout_horizontal{
  height: 360rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: row;
}
 
/*纵向布局  */
.layout_vertical{
  height: 360rpx;
  display: flex;
  /*row 横向  column 列表  */
  flex-direction: column;
}
 
/*划线  */
.line {
   background-color: blue;
   height: 2rpx;
   width: 100%;
}

.cidian-adjust{
  
  margin-top: 20rpx;
